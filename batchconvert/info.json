{
  "sourceFile": "source.mkv",
  "title": "Avengers - End Game",
  "outputFile": "Avengers - End Game.mkv",
  "video": {
    "title": "1080p (HEVC)",
    "language": "eng",
    "output": "video.hevc",
    "convert": true,
    "x265Opts": [
      "--preset",
      "medium",
      "--crf",
      "16",
      "--qcomp",
      "0.75",
      "--tune",
      "grain",
      "--output-depth",
      "10"
    ],
    "vapoursynth": {
      "script": "vapoursynth-filter.py",
      "variables": {
        "coolValue": "yeet"
      }
    },
    "mkvmergeOpts": ["--aspect-ratio", "0:16/9"]
  },
  "audio": [
    {
      "extension": "truehd",
      "convert": false,
      "default": true,
      "id": "1",
      "language": "eng",
      "title": "7.1 Atmos (TRUEHD)"
    },
    {
      "extension": "m4a",
      "convert": {
        "normalize": false,
        "codec": "aac",
        "encodeOpts": ["-b:a", "256K"],
        "filters": [
          {
            "downmixStereo": {
              "center": 1.0,
              "lfe": 0.707,
              "surrounds": 0.707
            }
          }
        ]
      },
      "default": true,
      "id": "1",
      "language": "eng",
      "title": "Stereo 'downmix' (AAC)"
    },
    {
      "extension": "m4a",
      "convert": {
        "codec": "aac",
        "encodeOpts": ["-b:a", "256K"],
        "filters": [
          { "ffmpeg": "speechnorm" },
          {
            "downmixStereo": {
              "center": 1.0,
              "lfe": 0.707,
              "surrounds": 0.707
            }
          }
        ]
      },
      "default": true,
      "id": "1",
      "language": "eng",
      "title": "Stereo 'speechnorm,downmix' (AAC)"
    },
    {
      "extension": "m4a",
      "convert": {
        "codec": "aac",
        "encodeOpts": ["-b:a", "256K"],
        "filters": [
          { "ffmpeg": "speechnorm=channels=FC" },
          { "ffmpeg": "dynaudnorm=compress=27.0:gausssize=53" },
          {
            "downmixStereo": {
              "center": 1.0,
              "lfe": 0.707,
              "surrounds": 0.707
            }
          },
          {
            "normalize": {
              "loudness_range_target": "keep",
              "target_level": -23,
              "true_peak": -0.5
            }
          }
        ]
      },
      "default": true,
      "id": "1",
      "language": "eng",
      "title": "Stereo 'speechnorm,dynaudnorm,downmix,loudnorm' (AAC)"
    },
    {
      "extension": "ac3",
      "convert": false,
      "nightmode": false,
      "default": false,
      "id": "5",
      "language": "eng",
      "title": "Commentary (AC3)"
    }
  ],
  "subs": [
    {
      "extension": "srt",
      "filter": true,
      "sup2srt": true,
      "default": false,
      "id": "6",
      "language": "eng",
      "title": "English SDH Subtitles (SRT)"
    },
    {
      "extension": "srt",
      "sup2srt": true,
      "default": false,
      "id": "6",
      "language": "eng",
      "title": "English SDH Subtitles (SRT)"
    },
    {
      "extension": "sup",
      "default": false,
      "id": "6",
      "language": "eng",
      "title": "English SDH Subtitles (PGS)"
    },
    {
      "extension": "sup",
      "default": false,
      "id": "9",
      "language": "eng",
      "title": "English Commentary Subtitles (PGS)"
    }
  ]
}
