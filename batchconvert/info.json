{
  "sourceFile": "source.mkv",
  "title": "Avengers - End Game",
  "outputFile": "Avengers - End Game.mkv",
  "video": {
    "title": "1080p (HEVC)",
    "language": "eng",
    "output": "video.hevc",
    "convert": true,
    "x265Opts": [
      "--preset",
      "medium",
      "--crf",
      "16",
      "--qcomp",
      "0.75",
      "--tune",
      "grain",
      "--output-depth",
      "10"
    ],
    "vapoursynthScript": "vapoursynth-filter.py",
    "mkvmergeOpts": ["--aspect-ratio", "0:16/9"]
  },
  "audio": [
    {
      "extension": "flac",
      "convert": true,
      "ffmpegopts": ["-compression_level", "8", "-acodec", "flac"],
      "nightmode": true,
      "nightmodeCodec": "flac",
      "nightmodeDownmixOnlyName": "Stereo Nightmode DownmixOnly (FLAC)",
      "nightmodeLoudnormName": "Stereo Nightmode Loudnorm (FLAC)",
      "nightmodeDrcName": "Stereo Nightmode DRC+Loudnorm (FLAC)",
      "default": true,
      "id": "1",
      "language": "eng",
      "title": "7.1 Surround (FLAC)"
    },
    {
      "extension": "ac3",
      "convert": false,
      "nightmode": false,
      "default": false,
      "id": "5",
      "language": "eng",
      "title": "Commentary (AC3)"
    }
  ],
  "subs": [
    {
      "extension": "srt",
      "sup2srt": true,
      "default": false,
      "id": "6",
      "language": "eng",
      "title": "English Subtitles (SRT)"
    },
    {
      "extension": "sup",
      "default": false,
      "id": "6",
      "language": "eng",
      "title": "English Subtitles (PGS)"
    },
    {
      "extension": "sup",
      "default": false,
      "id": "9",
      "language": "eng",
      "title": "English Commentary Subtitles (PGS)"
    }
  ]
}
