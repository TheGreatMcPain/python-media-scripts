{
    "sourceFile": "source.mkv",
    "title": "Avengers - End Game",
    "outputFile": "Avengers - End Game.mkv",
    "video": {
        "title": "1080p (H264)",
        "language": "eng",
        "vapoursynth": [
            "import havsfunc as haf",
            "core.ffms2.Source(source=SOURCEFILE)",
            "core.std.CropRel(video, top=140, bottom=140)",
            "haf.GSMC(video, thSAD=150, radius=2)",
            "core.f3kdb.Deband(video, dynamic_grain=True, preset='Low')",
            "core.std.AddBorders(video, top=140, bottom=140)"
        ],
        "x264opts": [
            "--preset", "veryslow", "--tune", "film",
            "--level", "4.1", "--crf", "16", "--qcomp", "0.7",
            "--input-range", "tv", "--range", "tv",
            "--colorprim", "bt709", "--tranfer", "bt709", "--colormatrix", "bt709"
        ]
    },
    "audio": [{
            "extension": "flac",
            "convert": "yes",
            "ffmpegopts": ["-compression_level", "8", "-acodec", "flac"],
            "nightmode": "yes",
